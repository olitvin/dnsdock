{{$GOLANG_VERSION := "1.10.1"}}
{{$ARCH:= (or .ARCH "amd64")}}
{{$GIT_COMMIT:= (or .GIT_COMMIT "develop")}}
{{$DOCKERIMAGE_VERSION:= (or .DOCKERIMAGE_VERSION "dev")}}
{{$SRC_DIR:= (or .SRC_DIR ".")}}

# build image
FROM alpine:3.7
RUN apk update
RUN apk upgrade
RUN apk add go>{{$GOLANG_VERSION}} go-tools>{{$GOLANG_VERSION}} git musl-dev

ENV GOPATH=/go
ENV PATH=${PATH}:/go/bin
ENV CGO_ENABLED=0

RUN go get -v github.com/tools/godep
RUN go get -u github.com/golang/lint/golint
RUN go get github.com/ahmetb/govvv

RUN mkdir -p /go/src/github.com/olitvin/dnsdock
WORKDIR /go/src/github.com/olitvin/dnsdock
{{if .SRC_DIR}}
  MOUNT {{$SRC_DIR}}:/go/src/github.com/olitvin/dnsdock
{{else}}
  RUN git clone https://github.com/olitvin/dnsdock /go/src/github.com/olitvin/dnsdock 
  RUN git checkout {{$GIT_COMMIT}}
{{end}}

{{if .OUTPUT_DIR}}
  MOUNT {{.OUTPUT_DIR}}:/tmp/output
{{else}}
  RUN mkdir /tmp/output
{{end}}

WORKDIR /go/src/github.com/olitvin/dnsdock
MOUNT Godeps:/go/src/github.com/olitvin/dnsdock/Godeps
RUN godep restore
ENV GOARCH={{$ARCH}}
WORKDIR /go/src/github.com/olitvin/dnsdock/src
ATTACH sh
RUN govvv build -o /tmp/output/dnsdock
RUN golint -set_exit_status
{{if eq $ARCH "amd64"}}
RUN go vet
RUN go test ./...
{{end}}
TAG olitvin/dnsdock-devenv:latest-{{$ARCH}}
EXPORT /tmp/output/dnsdock ./dnsdock

# run image
{{if eq $ARCH "amd64"}}
FROM alpine
{{else}}
FROM easypi/alpine-arm
{{end}}
IMPORT ./dnsdock /bin/dnsdock
ENTRYPOINT ["dnsdock"]
TAG olitvin/dnsdock:{{$DOCKERIMAGE_VERSION}}-{{$ARCH}}

{{if ne $DOCKERIMAGE_VERSION "dev"}}
TAG olitvin/dnsdock:latest-{{$ARCH}}
{{end}}
